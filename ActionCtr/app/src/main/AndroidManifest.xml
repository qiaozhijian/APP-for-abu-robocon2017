<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.action.app.actionctr">

    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- 设置蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 设置蓝牙权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- 下面是wifi的权限设置 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 下面声明使用ble -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <!-- 下面声明使用wifi -->
    <uses-feature android:name="android.hardware.wifi" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
             android:name=".BleConnectActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeginActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".humanSensorActivity"
                  android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ParamChangeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".DataActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".CtrActivity" />
        <activity
            android:name=".DebugDataDisplayActivity"
            android:screenOrientation="landscape" />

        <service
            android:name=".ble.BleService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".wifi.wifiService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>